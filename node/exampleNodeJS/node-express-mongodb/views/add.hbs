<h1>Add new courses</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="" name="title" id="title" type="text" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="Entry Title"></span>
    </div>

    <div class="input-field">
        <input placeholder="" name="price" id="price" type="number" class="validate" required min='1'>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Entry price"></span>
    </div>

    <div class="input-field">
        <input placeholder="" name="img" id="img" type="text" class="validate" required>
        <label for="img">URL</label>
        <span class="helper-text" data-error="Entry URL"></span>
    </div>

    <button class="btn btn-primary ">Add new course</button>
</form>